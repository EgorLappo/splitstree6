<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="anchorPane" prefHeight="400.0" prefWidth="800.0" style="-fx-background-color: transparent;"
            xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="splitstree6.view.trees.tanglegram.TanglegramViewController">
    <BorderPane fx:id="borderPane" style="-fx-background-color: transparent;" AnchorPane.bottomAnchor="0.0"
                AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <top>
            <VBox fx:id="vBox" BorderPane.alignment="CENTER">
                <AnchorPane>
                    <children>
                        <ToolBar fx:id="toolBar" prefHeight="32.0" AnchorPane.bottomAnchor="0.0"
                                 AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                            <ComboBox fx:id="tree1CBox" prefWidth="100.0"/>
                            <ComboBox fx:id="diagram1CBox" prefWidth="50.0">
                                <tooltip>
                                    <Tooltip text="Choose diagram for tree 1"/>
                                </tooltip>
                            </ComboBox>
                            <ComboBox fx:id="diagram2CBox" layoutX="165.0" layoutY="10.0" prefWidth="50.0">
                                <tooltip>
                                    <Tooltip text="Choose diagram for tree 2"/>
                                </tooltip>
                            </ComboBox>
                            <ComboBox fx:id="tree2CBox" layoutX="165.0" layoutY="10.0" prefWidth="100.0"/>
                            <Separator layoutX="274.0" layoutY="13.0" maxHeight="20.0" minHeight="20.0"
                                       orientation="VERTICAL" prefHeight="20.0"/>
                            <ComboBox fx:id="orientationCBox" layoutX="220.0" layoutY="10.0" prefWidth="50.0">
                                <tooltip>
                                    <Tooltip text="Choose orientation"/>
                                </tooltip>
                            </ComboBox>
                            <Separator layoutX="494.0" layoutY="13.0" maxHeight="20.0" minHeight="20.0"
                                       orientation="VERTICAL" prefHeight="20.0"/>
                            <Button fx:id="previousButton" mnemonicParsing="false"
                                    style="-fx-border-style: none; -fx-background-color: transparent;" text="&lt;">
                                <tooltip>
                                    <Tooltip text="Move to previous pair of trees"/>
                                </tooltip>
                            </Button>
                            <Button fx:id="nextButton" mnemonicParsing="false"
                                    style="-fx-border-style: none; -fx-background-color: transparent;" text="&gt;">
                                <tooltip>
                                    <Tooltip text="Move to next pair of trees"/>
                                </tooltip>
                            </Button>
                            <Separator layoutX="548.0" layoutY="13.0" maxHeight="20.0" minHeight="20.0"
                                       orientation="VERTICAL" prefHeight="20.0"/>
                            <ToggleButton fx:id="showTreeNamesToggleButton" contentDisplay="CENTER"
                                          maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
                                          minWidth="-Infinity" mnemonicParsing="false" prefHeight="24.0"
                                          prefWidth="24.0" text="n">
                                <tooltip>
                                    <Tooltip text="Show tree names or details"/>
                                </tooltip>
                                <font>
                                    <Font size="12.0"/>
                                </font>
                            </ToggleButton>
                            <Separator maxHeight="20.0" minHeight="20.0" orientation="VERTICAL" prefHeight="20.0"/>

                            <Button fx:id="expandVerticallyButton" contentDisplay="GRAPHIC_ONLY" maxHeight="20.0"
                                    minHeight="20.0" mnemonicParsing="false" prefHeight="20.0"
                                    style="-fx-border-style: none; -fx-background-color: transparent;"
                                    text="Expand Vertically">
                                <font>
                                    <Font size="10.0"/>
                                </font>
                                <graphic>
                                    <ImageView fitHeight="16.0" fitWidth="16.0" pickOnBounds="true"
                                               preserveRatio="true">
                                        <Image smooth="false" url="@/jloda/resources/icons/ExpandVertical16.gif"/>
                                    </ImageView>
                                </graphic>
                                <tooltip>
                                    <Tooltip text="Expand tree vertically"/>
                                </tooltip>
                            </Button>
                            <Button fx:id="contractVerticallyButton" contentDisplay="GRAPHIC_ONLY" maxHeight="20.0"
                                    minHeight="20.0" mnemonicParsing="false" prefHeight="20.0"
                                    style="-fx-border-style: none; -fx-background-color: transparent;"
                                    text="Contract Vertically">
                                <font>
                                    <Font size="10.0"/>
                                </font>
                                <graphic>
                                    <ImageView fitHeight="16.0" fitWidth="16.0" pickOnBounds="true"
                                               preserveRatio="true">
                                        <Image smooth="false" url="@/jloda/resources/icons/ContractVertical16.gif"/>
                                    </ImageView>
                                </graphic>
                                <tooltip>
                                    <Tooltip text="Contract tree vertically"/>
                                </tooltip>
                            </Button>
                            <Button fx:id="expandHorizontallyButton" contentDisplay="GRAPHIC_ONLY" maxHeight="20.0"
                                    minHeight="20.0" mnemonicParsing="false" prefHeight="20.0"
                                    style="-fx-border-style: none; -fx-background-color: transparent;"
                                    text="Expand Horizontally">
                                <font>
                                    <Font size="10.0"/>
                                </font>
                                <graphic>
                                    <ImageView fitHeight="16.0" fitWidth="16.0" pickOnBounds="true"
                                               preserveRatio="true">
                                        <Image smooth="false" url="@/jloda/resources/icons/ExpandHorizontal16.gif"/>
                                    </ImageView>
                                </graphic>
                                <tooltip>
                                    <Tooltip text="Expand tree horizontally"/>
                                </tooltip>
                            </Button>
                            <Button fx:id="contractHorizontallyButton" contentDisplay="GRAPHIC_ONLY" maxHeight="20.0"
                                    minHeight="20.0" mnemonicParsing="false" prefHeight="20.0"
                                    style="-fx-border-style: none; -fx-background-color: transparent;"
                                    text="Contract Horizontally">
                                <font>
                                    <Font size="10.0"/>
                                </font>
                                <graphic>
                                    <ImageView fitHeight="16.0" fitWidth="16.0" pickOnBounds="true"
                                               preserveRatio="true">
                                        <Image smooth="false" url="@/jloda/resources/icons/ContractHorizontal16.gif"/>
                                    </ImageView>
                                </graphic>
                                <tooltip>
                                    <Tooltip text="Contract tree horizontally"/>
                                </tooltip>
                            </Button>
                            <Button fx:id="increaseFontButton" maxHeight="20.0" minHeight="20.0" mnemonicParsing="false"
                                    prefHeight="20.0" style="-fx-border-style: none; -fx-background-color: transparent;"
                                    text="A+">
                                <font>
                                    <Font size="11.0"/>
                                </font>
                                <tooltip>
                                    <Tooltip text="Increase font size"/>
                                </tooltip>
                            </Button>
                            <Button fx:id="decreaseFontButton" maxHeight="20.0" minHeight="20.0" mnemonicParsing="false"
                                    prefHeight="20.0" style="-fx-border-style: none; -fx-background-color: transparent;"
                                    text="A-">
                                <font>
                                    <Font size="11.0"/>
                                </font>
                                <tooltip>
                                    <Tooltip text="Decrease font size"/>
                                </tooltip>
                            </Button>
                        </ToolBar>
                    </children>
                </AnchorPane>
            </VBox>
        </top>
        <center>
            <AnchorPane fx:id="outerAnchorPane">
                <children>
                    <AnchorPane fx:id="innerAnchorPane" layoutY="2.0" AnchorPane.bottomAnchor="0.0"
                                AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                        <ScrollPane fx:id="scrollPane" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
                                    AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                            <HBox alignment="CENTER" styleClass="viewer-background">
                                <padding>
                                    <Insets bottom="40.0" left="10.0" right="10.0" top="50.0"/>
                                </padding>
                                <StackPane fx:id="leftPane" alignment="TOP_RIGHT" pickOnBounds="false"
                                           style="-fx-background-color: transparent;" HBox.hgrow="ALWAYS"/>
                                <Pane fx:id="middlePane" maxWidth="-Infinity" minWidth="50.0" pickOnBounds="false"
                                      prefHeight="200.0" style="-fx-background-color: transparent;"/>
                                <StackPane fx:id="rightPane" alignment="TOP_LEFT" pickOnBounds="false"
                                           style="-fx-background-color: transparent;" HBox.hgrow="ALWAYS"/>
                            </HBox>
                        </ScrollPane>
                        <VBox fx:id="formatVBox" minHeight="30.0" prefWidth="200.0" styleClass="context-menu"
                              AnchorPane.rightAnchor="16.0" AnchorPane.topAnchor="4.0"/>
                    </AnchorPane>
                </children>
            </AnchorPane>
        </center>
    </BorderPane>
    <HBox alignment="CENTER_LEFT" prefHeight="32.0" spacing="5.0" AnchorPane.rightAnchor="32.0"
          AnchorPane.topAnchor="0.0">
        <children>
            <ToggleButton fx:id="settingsToggleButton" contentDisplay="GRAPHIC_ONLY" focusTraversable="false"
                          maxHeight="20.0" minHeight="20.0" mnemonicParsing="false" prefHeight="20.0"
                          style="-fx-border-style: none;" text="Settings">
                <font>
                    <Font size="10.0"/>
                </font>
                <graphic>
                    <ImageView fitHeight="16.0" fitWidth="16.0" pickOnBounds="true" preserveRatio="true">
                        <Image url="@/jloda/resources/icons/sun/Edit24.gif"/>
                    </ImageView>
                </graphic>
                <tooltip>
                    <Tooltip text="Show the Settings toolbar"/>
                </tooltip>
            </ToggleButton>
            <ToggleButton fx:id="findToggleButton" contentDisplay="GRAPHIC_ONLY" maxHeight="20.0" minHeight="20.0"
                          mnemonicParsing="false" prefHeight="20.0" style="-fx-border-style: none;" text="Find">
                <font>
                    <Font size="10.0"/>
                </font>
                <graphic>
                    <ImageView fitHeight="16.0" fitWidth="16.0" pickOnBounds="true" preserveRatio="true">
                        <Image smooth="false" url="@/jloda/resources/icons/sun/Find16.gif"/>
                    </ImageView>
                </graphic>
                <tooltip>
                    <Tooltip text="Show the Find or Find/Replace toolbar"/>
                </tooltip>
            </ToggleButton>
            <ToggleButton fx:id="formatToggleButton" contentDisplay="GRAPHIC_ONLY" focusTraversable="false"
                          maxHeight="20.0" minHeight="20.0" mnemonicParsing="false" prefHeight="20.0"
                          style="-fx-border-style: none;" text="Format">
                <font>
                    <Font size="10.0"/>
                </font>
                <graphic>
                    <ImageView fitHeight="16.0" fitWidth="16.0" pickOnBounds="true" preserveRatio="true">
                        <Image url="@/jloda/resources/icons/sun/Preferences24.gif"/>
                    </ImageView>
                </graphic>
                <tooltip>
                    <Tooltip text="Show the Format toolbar"/>
                </tooltip>
            </ToggleButton>
        </children>
    </HBox>
</AnchorPane>
