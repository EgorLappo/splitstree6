<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<AnchorPane fx:id="anchorPane" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/18"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="splitstree6.view.displaytext.DisplayTextViewController">
    <BorderPane fx:id="borderPane" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
                AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <top>
            <VBox fx:id="topVBox" BorderPane.alignment="CENTER">
                <ToolBar fx:id="toolBar" prefHeight="32.0">
                    <ToggleButton fx:id="findToggleButton" contentDisplay="CENTER" focusTraversable="false" text="Find">
                        <tooltip>
                            <Tooltip text="Show the Find or Find/Replace toolbar"/>
                        </tooltip>
                    </ToggleButton>
                    <ToggleButton fx:id="wrapTextToggle" contentDisplay="CENTER" layoutX="98.0" layoutY="11.0"
                                  mnemonicParsing="false" selected="true" text="Wrap">
                        <font>
                            <Font size="10.0"/>
                        </font>
                        <tooltip>
                            <Tooltip text="Wrap lines"/>
                        </tooltip>
                    </ToggleButton>
                    <ToggleButton fx:id="lineNumbersToggle" contentDisplay="CENTER" layoutX="98.0" layoutY="11.0"
                                  mnemonicParsing="false" text="Line Numbers">
                        <font>
                            <Font size="10.0"/>
                        </font>
                        <tooltip>
                            <Tooltip text="Show line numbers"/>
                        </tooltip>
                    </ToggleButton>
                    <Separator maxHeight="20.0" minHeight="20.0" orientation="VERTICAL" prefHeight="20.0"/>
                    <Button fx:id="increaseFontButton" contentDisplay="CENTER" mnemonicParsing="false" text="A+">
                        <font>
                            <Font size="11.0"/>
                        </font>
                    </Button>
                    <Button fx:id="decreaseFontButton" contentDisplay="CENTER" mnemonicParsing="false" text="A-">
                        <font>
                            <Font size="11.0"/>
                        </font>
                    </Button>
                </ToolBar>
            </VBox>
        </top>
    </BorderPane>
</AnchorPane>
