<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<AnchorPane fx:id="anchorPane" prefHeight="50.0" prefWidth="160.0" style="-fx-border-color: lightgray;"
            xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="splitstree6.tabs.workflow.algorithm.AlgorithmItemController">
    <children>
        <VBox spacing="5.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
              AnchorPane.topAnchor="0.0">
            <children>
                <BorderPane VBox.vgrow="NEVER">
                    <left>
                        <Label fx:id="nameLabel" minHeight="-Infinity" text="Algorithm" BorderPane.alignment="CENTER"/>
                    </left>
                    <right>
                        <Pane fx:id="iconPane" maxHeight="16.0" maxWidth="16.0" minHeight="16.0" minWidth="16.0"
                              prefHeight="16.0" prefWidth="16.0" BorderPane.alignment="CENTER"/>
                    </right>
                </BorderPane>
                <BorderPane VBox.vgrow="NEVER">
                    <left>
                        <Button fx:id="editButton" contentDisplay="GRAPHIC_ONLY" maxHeight="18.0" maxWidth="18.0"
                                minHeight="18.0" minWidth="18.0" mnemonicParsing="false" prefHeight="18.0"
                                prefWidth="18.0" style="-fx-border-style: none; -fx-background-color: transparent;"
                                text="Edit" BorderPane.alignment="CENTER">
                            <font>
                                <Font size="10.0"/>
                            </font>
                            <graphic>
                                <ImageView fitHeight="16.0" fitWidth="16.0" pickOnBounds="true" preserveRatio="true">
                                    <image>
                                        <Image smooth="false" url="@/jloda/resources/icons/sun/Edit16.gif"/>
                                    </image>
                                </ImageView>
                            </graphic>
                            <tooltip>
                                <Tooltip text="Configure this algorithm"/>
                            </tooltip>
                        </Button>
                    </left>
                    <right>
                        <Button fx:id="playButton" contentDisplay="GRAPHIC_ONLY" maxHeight="18.0" maxWidth="18.0"
                                minHeight="18.0" minWidth="18.0" mnemonicParsing="false" prefHeight="18.0"
                                prefWidth="18.0" style="-fx-border-style: none; -fx-background-color: transparent;"
                                text="Play" BorderPane.alignment="CENTER">
                            <font>
                                <Font size="10.0"/>
                            </font>
                            <graphic>
                                <ImageView fitHeight="16.0" fitWidth="16.0" pickOnBounds="true" preserveRatio="true">
                                    <image>
                                        <Image smooth="false" url="@/jloda/resources/icons/Play.png"/>
                                    </image>
                                </ImageView>
                            </graphic>
                            <tooltip>
                                <Tooltip text="Run this algorithm"/>
                            </tooltip>
                        </Button>
                    </right>
                </BorderPane>
            </children>
            <padding>
                <Insets bottom="3.0" left="3.0" right="3.0" top="3.0"/>
            </padding>
        </VBox>
    </children>
</AnchorPane>
