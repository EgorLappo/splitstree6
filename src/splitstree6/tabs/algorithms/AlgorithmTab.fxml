<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="splitstree6.tabs.algorithms.AlgorithmTabController">
    <children>
        <BorderPane AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
                    AnchorPane.topAnchor="0.0">
            <center>
                <VBox fx:id="mainPane" alignment="CENTER" spacing="10.0" BorderPane.alignment="CENTER">
                    <BorderPane.margin>
                        <Insets bottom="2.0" left="2.0" right="2.0" top="2.0"/>
                    </BorderPane.margin>
                </VBox>
            </center>
            <top>
                <GridPane BorderPane.alignment="CENTER">
                    <columnConstraints>
                        <ColumnConstraints halignment="LEFT" hgrow="SOMETIMES"/>
                        <ColumnConstraints halignment="CENTER" hgrow="ALWAYS"/>
                        <ColumnConstraints halignment="RIGHT" hgrow="SOMETIMES"/>
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints minHeight="32.0" prefHeight="34.0" vgrow="SOMETIMES"/>
                    </rowConstraints>
                    <children>
                        <ChoiceBox fx:id="algorithmCBox">
                            <GridPane.margin>
                                <Insets bottom="5.0" left="5.0" right="5.0" top="10.0"/>
                            </GridPane.margin>
                        </ChoiceBox>
                        <HBox spacing="10.0" GridPane.columnIndex="2">
                            <children>
                                <Button fx:id="Reset" contentDisplay="GRAPHIC_ONLY" layoutX="98.0" layoutY="11.0"
                                        maxHeight="18.0" maxWidth="18.0" minHeight="18.0" minWidth="18.0"
                                        mnemonicParsing="false" prefHeight="18.0" prefWidth="18.0"
                                        style="-fx-border-style: none; -fx-background-color: transparent;" text="Reset">
                                    <graphic>
                                        <ImageView fitHeight="16.0" fitWidth="16.0" pickOnBounds="true"
                                                   preserveRatio="true">
                                            <image>
                                                <Image smooth="false" url="@/jloda/resources/icons/sun/Undo24.gif"/>
                                            </image>
                                        </ImageView>
                                    </graphic>
                                    <tooltip>
                                        <Tooltip text="Reset to default settings"/>
                                    </tooltip>
                                </Button>
                                <Button fx:id="applyButton" contentDisplay="GRAPHIC_ONLY" layoutX="98.0" layoutY="11.0"
                                        maxHeight="18.0" maxWidth="18.0" minHeight="18.0" minWidth="18.0"
                                        mnemonicParsing="false" prefHeight="18.0" prefWidth="18.0"
                                        style="-fx-border-style: none; -fx-background-color: transparent;" text="Apply">
                                    <graphic>
                                        <ImageView fitHeight="16.0" fitWidth="16.0" pickOnBounds="true"
                                                   preserveRatio="true">
                                            <image>
                                                <Image smooth="false" url="@/jloda/resources/icons/sun/Play24.gif"/>
                                            </image>
                                        </ImageView>
                                    </graphic>
                                    <tooltip>
                                        <Tooltip text="Run algorithm"/>
                                    </tooltip>
                                </Button>
                            </children>
                            <padding>
                                <Insets bottom="5.0" left="5.0" right="10.0" top="5.0"/>
                            </padding>
                        </HBox>
                    </children>
                </GridPane>
            </top>
        </BorderPane>
    </children>
</AnchorPane>
