<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<AnchorPane fx:id="anchorPane" prefHeight="400.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/16"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="splitstree6.view.trees.tanglegram.TanglegramViewController">
    <children>
        <BorderPane fx:id="borderPane" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
                    AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <top>
                <VBox fx:id="vBox" BorderPane.alignment="CENTER">
                    <children>
                        <ToolBar fx:id="toolBar" prefHeight="32.0">
                            <items>
                                <Button fx:id="openButton" contentDisplay="GRAPHIC_ONLY" maxHeight="20.0"
                                        minHeight="20.0" mnemonicParsing="false" prefHeight="20.0"
                                        style="-fx-border-style: none; -fx-background-color: transparent;" text="Open">
                                    <font>
                                        <Font size="10.0"/>
                                    </font>
                                    <graphic>
                                        <ImageView fitHeight="16.0" fitWidth="16.0" pickOnBounds="true"
                                                   preserveRatio="true">
                                            <image>
                                                <Image url="@/jloda/resources/icons/sun/Open16.gif"/>
                                            </image>
                                        </ImageView>
                                    </graphic>
                                    <tooltip>
                                        <Tooltip text="Open a file"/>
                                    </tooltip>
                                </Button>
                                <Button fx:id="saveButton" contentDisplay="GRAPHIC_ONLY" maxHeight="20.0"
                                        mnemonicParsing="false" prefHeight="20.0"
                                        style="-fx-border-style: none; -fx-background-color: transparent;" text="Save">
                                    <font>
                                        <Font size="10.0"/>
                                    </font>
                                    <graphic>
                                        <ImageView fitHeight="16.0" fitWidth="16.0" pickOnBounds="true"
                                                   preserveRatio="true">
                                            <image>
                                                <Image smooth="false" url="@/jloda/resources/icons/sun/Save16.gif"/>
                                            </image>
                                        </ImageView>
                                    </graphic>
                                    <tooltip>
                                        <Tooltip text="Save file"/>
                                    </tooltip>
                                </Button>
                                <Button fx:id="printButton" contentDisplay="GRAPHIC_ONLY" maxHeight="20.0"
                                        mnemonicParsing="false" prefHeight="20.0"
                                        style="-fx-border-style: none; -fx-background-color: transparent;" text="Print">
                                    <font>
                                        <Font size="10.0"/>
                                    </font>
                                    <graphic>
                                        <ImageView fitHeight="16.0" fitWidth="16.0" pickOnBounds="true"
                                                   preserveRatio="true">
                                            <image>
                                                <Image smooth="false" url="@/jloda/resources/icons/sun/Print16.gif"/>
                                            </image>
                                        </ImageView>
                                    </graphic>
                                    <tooltip>
                                        <Tooltip text="Print the selected tab"/>
                                    </tooltip>
                                </Button>
                                <Separator layoutX="144.0" layoutY="11.0" maxHeight="20.0" minHeight="20.0"
                                           orientation="VERTICAL" prefHeight="20.0"/>
                                <Button fx:id="findButton" contentDisplay="GRAPHIC_ONLY" maxHeight="20.0"
                                        minHeight="20.0" mnemonicParsing="false" prefHeight="20.0"
                                        style="-fx-border-style: none; -fx-background-color: transparent;" text="Find">
                                    <font>
                                        <Font size="10.0"/>
                                    </font>
                                    <graphic>
                                        <ImageView fitHeight="16.0" fitWidth="16.0" pickOnBounds="true"
                                                   preserveRatio="true">
                                            <image>
                                                <Image smooth="false" url="@/jloda/resources/icons/sun/Find16.gif"/>
                                            </image>
                                        </ImageView>
                                    </graphic>
                                    <tooltip>
                                        <Tooltip text="Find in selected tab"/>
                                    </tooltip>
                                </Button>
                                <Separator maxHeight="20.0" minHeight="20.0" orientation="VERTICAL" prefHeight="20.0"/>
                                <ComboBox fx:id="tree1CBox" prefWidth="100.0"/>
                                <ComboBox fx:id="diagram1CBox" prefWidth="50.0">
                                    <tooltip>
                                        <Tooltip text="Choose diagram"/>
                                    </tooltip>
                                </ComboBox>
                                <Separator layoutX="144.0" layoutY="11.0" maxHeight="20.0" minHeight="20.0"
                                           orientation="VERTICAL" prefHeight="20.0"/>
                                <ComboBox fx:id="tree2CBox" layoutX="165.0" layoutY="10.0" prefWidth="100.0"/>
                                <ComboBox fx:id="diagram2CBox" layoutX="165.0" layoutY="10.0" prefWidth="50.0">
                                    <tooltip>
                                        <Tooltip text="Choose diagram"/>
                                    </tooltip>
                                </ComboBox>
                                <Separator layoutX="274.0" layoutY="13.0" maxHeight="20.0" minHeight="20.0"
                                           orientation="VERTICAL" prefHeight="20.0"/>
                                <ComboBox fx:id="orientationCBox" layoutX="220.0" layoutY="10.0" prefWidth="50.0">
                                    <tooltip>
                                        <Tooltip text="Choose root side"/>
                                    </tooltip>
                                </ComboBox>
                                <Separator layoutX="494.0" layoutY="13.0" maxHeight="20.0" minHeight="20.0"
                                           orientation="VERTICAL" prefHeight="20.0"/>
                                <ToggleButton fx:id="showTreeNamesToggleButton" contentDisplay="GRAPHIC_ONLY"
                                              maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
                                              minWidth="-Infinity" mnemonicParsing="false" prefHeight="24.0"
                                              prefWidth="24.0" text="Show Tree Names">
                                    <graphic>
                                        <ImageView fitHeight="16.0" fitWidth="16.0" pickOnBounds="true"
                                                   preserveRatio="true">
                                            <image>
                                                <Image url="@/splitstree6/resources/icons/Text16.png"/>
                                            </image>
                                        </ImageView>
                                    </graphic>
                                    <tooltip>
                                        <Tooltip text="Show tree names"/>
                                    </tooltip>
                                </ToggleButton>
                                <Separator layoutX="548.0" layoutY="13.0" maxHeight="20.0" minHeight="20.0"
                                           orientation="VERTICAL" prefHeight="20.0"/>
                            </items>
                        </ToolBar>
                    </children>
                </VBox>
            </top>
            <center>
                <GridPane fx:id="gridPane" alignment="CENTER" pickOnBounds="false">
                    <columnConstraints>
                        <ColumnConstraints halignment="CENTER" hgrow="ALWAYS" minWidth="10.0"/>
                        <ColumnConstraints halignment="CENTER" hgrow="ALWAYS" maxWidth="-Infinity"
                                           minWidth="-Infinity"/>
                        <ColumnConstraints halignment="CENTER" hgrow="ALWAYS" minWidth="10.0"/>
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" valignment="CENTER" vgrow="ALWAYS"/>
                    </rowConstraints>
                    <children>
                        <Pane fx:id="middlePane" maxWidth="-Infinity" minWidth="-Infinity" pickOnBounds="false"
                              prefWidth="250.0" style="-fx-background-color: transparent;" GridPane.columnIndex="1"
                              GridPane.hgrow="SOMETIMES" GridPane.vgrow="ALWAYS"/>
                        <StackPane fx:id="leftPane" pickOnBounds="false" style="-fx-background-color: transparent;"
                                   GridPane.halignment="RIGHT" GridPane.hgrow="ALWAYS" GridPane.valignment="CENTER"
                                   GridPane.vgrow="ALWAYS"/>
                        <StackPane fx:id="rightPane" pickOnBounds="false" style="-fx-background-color: transparent;"
                                   GridPane.columnIndex="2" GridPane.halignment="LEFT" GridPane.hgrow="ALWAYS"
                                   GridPane.valignment="CENTER" GridPane.vgrow="ALWAYS"/>
                    </children>
                </GridPane>
            </center>
        </BorderPane>
    </children>
</AnchorPane>
