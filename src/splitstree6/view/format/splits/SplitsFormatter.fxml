<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.paint.Color?>
<?import javafx.scene.text.Font?>
<VBox prefWidth="200.0" spacing="5.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="splitstree6.view.format.splits.SplitsFormatterController">
    <children>
        <HBox alignment="CENTER">
            <children>
                <Label text="Splits">
                    <tooltip>
                        <Tooltip text="Branch formatting"/>
                    </tooltip>
                </Label>
            </children>
        </HBox>
        <HBox alignment="CENTER_LEFT" layoutX="15.0" layoutY="37.0" spacing="6.0">
            <children>
                <Label text=" Width"/>
                <ComboBox fx:id="widthCBox" editable="true" prefWidth="100.0" visibleRowCount="14">
                    <tooltip>
                        <Tooltip text="Line width"/>
                    </tooltip>
                </ComboBox>
            </children>
        </HBox>
        <HBox alignment="CENTER_LEFT" layoutX="15.0" layoutY="68.0" spacing="4.0">
            <children>
                <Label text="Color">
                    <font>
                        <Font size="12.0"/>
                    </font>
                    <HBox.margin>
                        <Insets right="8.0"/>
                    </HBox.margin>
                </Label>
                <ColorPicker fx:id="colorPicker" editable="true">
                    <tooltip>
                        <Tooltip text="Text color"/>
                    </tooltip>
                </ColorPicker>
            </children>
        </HBox>
        <Separator prefWidth="200.0"/>
        <HBox alignment="CENTER" layoutX="15.0" layoutY="15.0">
            <children>
                <Label text="Outline">
                    <tooltip>
                        <Tooltip text="Branch formatting"/>
                    </tooltip>
                </Label>
            </children>
        </HBox>
        <HBox alignment="CENTER_LEFT" layoutX="15.0" layoutY="68.0" spacing="4.0">
            <children>
                <Label text="Fill">
                    <font>
                        <Font size="12.0"/>
                    </font>
                    <HBox.margin>
                        <Insets right="20.0"/>
                    </HBox.margin>
                </Label>
                <ColorPicker fx:id="outlineColorPicker">
                    <tooltip>
                        <Tooltip text="Text color"/>
                    </tooltip>
                    <value>
                        <Color red="0.7529411911964417" green="0.7529411911964417" blue="0.7529411911964417"/>
                    </value>
                </ColorPicker>
            </children>
        </HBox>
        <Separator prefWidth="200.0"/>
        <HBox alignment="CENTER" layoutX="15.0" layoutY="99.0">
            <children>
                <Label text="Rotate">
                    <tooltip>
                        <Tooltip text="Branch formatting"/>
                    </tooltip>
                </Label>
            </children>
        </HBox>
        <HBox alignment="CENTER" spacing="4.0">
            <children>
                <Button fx:id="rotateLeftButton" mnemonicParsing="false" text="&lt;"/>
                <Button fx:id="rotateRightButton" mnemonicParsing="false" text="&gt;"/>
            </children>
        </HBox>
    </children>
    <padding>
        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
    </padding>
</VBox>
